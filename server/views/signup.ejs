          <div>
            <p class="forgotPass">
              <a href="">Forget password</a>
            </p>
            <button type="submit">Login</button>
          </div>
        
        </form>
      </div>
      
      <p id="newUser">Alreade a user/<a href="/login">se connécter</a></p>
      
      
      
    </div>
    
    
    
