<%- include("component/header", {css: "connectionPage"}) %>

<section id="connectionPage">
    
    
    <div class="headPage">
      <div class="logo">
        <a href="/">
          <img src="assets/image/logo.png" alt="">
        </a>
      </div>
      <div style="" class="salutation">
